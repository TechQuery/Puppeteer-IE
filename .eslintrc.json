{
    "env": {
        "es6": true,
        "node": true,
        "browser": true,
        "mocha": true
    },
    "parserOptions": {
        "ecmaVersion": 8
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error", 4, {"SwitchCase": 1}
        ],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-console": ["error", {
            "allow": ["info", "warn", "error", "time", "timeEnd"]
        }]
    },
    "globals": {
        "ActiveXObject": false
    }
}
